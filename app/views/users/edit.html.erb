<div class="row">
	<div class="span6 offset3" >
		<% @page_title = "Edit User: #{@user.name}" -%>

<div class="well">
			<%= form_for(:user, :url => {:action => 'update', :id => @user.id}, :html =>{:class=>"form-horizontal"}) do |f| %>
			<legend>Edit User</legend>
			<%= render(:partial => 'form', :locals => {:f => f} ) %>

			<div class="form-buttons pull-right" >
				<%= link_to("Back to List", {:action => 'list'}, :class => 'btn btn-inverse') %>
				<%= submit_tag 'Update User', :class =>"btn btn-primary" %>
			</div>
	<br />
			<% end %>
		
		</div>
	</div>
</div>
