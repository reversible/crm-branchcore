<div class="row">
	<div class="span10 offset1">
		<h1>Listing Opportunities</h1>

		<table class="table table-hover"">
		<thead>
		<tr>
		<th>Id</th>	
		<th>Responsable User</th>
		<th>Linked Account</th>
		<th>Amount</th>
		<th>Status</th>
		<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		<% @opportunities.each do |opportunity| %>
		<tr>
		<td><%= opportunity.id %></td>	
		<td><%= opportunity.user ? opportunity.user.name : "N/A"  %></td>
		<td><%= opportunity.account ? opportunity.account.name : "N/A"  %></td>
		<td><%= opportunity.amount %></td>
		<td><%= opportunity.status %></td>

		<td>

		<div class="btn-group">
		<a class="btn btn-primary" href="#"><i class="icon-opportunity icon-white"></i> opportunity</a> <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"> </span> </a>
		<ul class="dropdown-menu">

		<li> <%= link_to("Edit", {:action => 'edit', :id => opportunity.id}) %> </li>
		<li><%= link_to("Delete".html_safe, {:action => 'delete', :id => opportunity.id}) %></li>
		<ul>

		</ul>
		</ul>
		</div>

		</td>

		</tr>
		<% end %>
		</tbody>
	
	</table>


		<div class="other_actions">
			<%= link_to "Add opportunity", {:action=>"new"}, :class => "btn btn-primary" %>
	
			
			<%= will_paginate @opportunities %>
			
		</div>

		<br />
	</div>
</div>