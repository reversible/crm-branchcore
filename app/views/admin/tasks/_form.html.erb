<% if @task.errors.any? %>
<ul class="alert alert-error error_form_list">
	<% @task.errors.full_messages.each do |msg| %>
	<li>
		<%= msg %>
	</li>
	<% end %>
</ul>
<% end %>

<%= form_for([:admin, @task],:html =>{:class=>"form-horizontal"}) do |f| %>

	<div class="control-group">
		<%= f.label :account_id, "Account",:class=>"control-label" %>
		<div class="controls">
			<%= f.select(:account_id, @accounts.collect {|s| [s.name, s.id]},{:prompt => 'Select an account'}) %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :contact_id, "Contact",:class=>"control-label" %>
		<div class="controls">
			<%= f.select(:contact_id, @contacts.collect {|s| [s.name, s.id]},{:prompt => 'Select a contact'}) %>
		</div>
	</div>
	

<div class="control-group">
		<%= f.label :user_id, "User",:class=>"control-label" %>
		<div class="controls">
			<%= f.select(:user_id, @users.collect {|s| [s.name, s.id]} ,{:prompt => 'Select a user'}) %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :subject, :class=>"control-label" %>
		<div class="controls">
			<%= f.text_field :subject %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :status, :class=>"control-label" %>
		<div class="controls">
			<%= f.select :status, options_for_select([["Active", "ACTIVE"], ["Inactive", "INACTIVE"]],{:prompt => 'Select a status'}) %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :start_date, :class=>"control-label" %>
		<div class="controls">
			<%= f.datetime_select :start_date %>
		</div>
	</div>

	<div class="control-group ">
		<%= f.label :limit_date, :class=>"control-label" %>
		<div class="controls">
			<%= f.datetime_select :limit_date %>
		</div>
	</div>
	
		<div class="control-group">
		<%= f.label :end_date, :class=>"control-label" %>
		<div class="controls">
			<%= f.datetime_select :end_date %>
		</div>
	</div>


<div class="form-buttons pull-right" >
				<%= link_to("Back to List", admin_tasks_path, :class => 'btn btn-inverse') %>
				<%= f.submit  :class =>"btn btn-primary" %>
</div>


<% end %>
