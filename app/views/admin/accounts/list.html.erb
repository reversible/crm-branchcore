<div class="row">
	<div class="span10 offset1">
		<h1>Listing Accounts</h1>

		<table class="table table-hover"">
		<thead>
		<tr>
		<th>Id</th>	
		<th>Name</th>
		<th>Email</th>
		<th>Type</th>
		<th>User</th>
		<th>Business Type</th>

		<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		<% @accounts.each do |account| %>
		<tr>
		<td><%= account.id %></td>	
		<td><%= account.name %></td>
		<td><%= account.email %></td>
		<td><%= account.account_type %></td>
		<td><%= account.user ? account.user.name : "N/A"  %></td>
		<td><%= account.business_type ? account.business_type.sector : "N/A"  %></td>

		<td>

		<div class="btn-group">
		<a class="btn btn-primary" href="#"><i class="icon-account icon-white"></i> account</a> <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"> </span> </a>
		<ul class="dropdown-menu">

		<li> <%= link_to("Edit", {:action => 'edit', :id => account.id}) %> </li>
		<li><%= link_to("Delete".html_safe, {:action => 'delete', :id => account.id}) %></li>
		<ul>

		</ul>
		</ul>
		</div>

		</td>

		</tr>
		<% end %>
		</tbody>
	
	</table>


		<div class="other_actions">
			<%= link_to "Add Account", {:action=>"new"}, :class => "btn btn-primary" %>
	
			
			<%= will_paginate @accounts %>
			
		</div>

		<br />
	</div>
</div>