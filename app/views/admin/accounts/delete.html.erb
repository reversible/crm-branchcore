<div class="row">
	<div class="span4 offset4">
<% @page_title = "Delete Account #{@account.name}" %>


<div class="user delete">
  <h2>Delete Admin User</h2>
  
  <%= form_for(:account, :url => {:action => 'destroy', :id => @account.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this account?</p>
  
    <p class="reference-name"><%= @account.name %></p>
  
    <div class="form-buttons">
    	<%= link_to("Back to List", {:action => 'list'}, :class => 'btn btn-inverse') %>
      <%= submit_tag "Delete Account", :class => "btn btn-danger" %>
    </div>
    
  <% end %>
</div>
</div>
</div>
