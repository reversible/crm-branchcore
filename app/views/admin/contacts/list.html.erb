<div class="row">
	<div class="span10 offset1">
		<h1>Listing Contacts</h1>

		<table class="table table-hover"">
		<thead>
		<tr>
		<th>Id</th>	
		<th>First Name</th>
		<th>Last Name</th>
		<th>Status</th>
		<th>User</th>
		<th>Email</th>

		<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		<% @contacts.each do |contact| %>
		<tr>
		<td><%= contact.id %></td>	
		<td><%= contact.first_name %></td>
		<td><%= contact.last_name %></td>
		<td><%= contact.status %></td>
		<td><%= contact.user ? contact.user.name : "N/A"  %></td>
		<td><%= contact.email %></td>

		<td>

		<div class="btn-group">
		<a class="btn btn-primary" href="#"><i class="icon-contact icon-white"></i> contact</a> <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"> </span> </a>
		<ul class="dropdown-menu">

		<li> <%= link_to("Edit", {:action => 'edit', :id => contact.id}) %> </li>
		<li><%= link_to("Delete".html_safe, {:action => 'delete', :id => contact.id}) %></li>
		<ul>

		</ul>
		</ul>
		</div>

		</td>

		</tr>
		<% end %>
		</tbody>
	
	</table>


		<div class="other_actions">
			<%= link_to "Add contact", {:action=>"new"}, :class => "btn btn-primary" %>
	
			
			<%= will_paginate @contacts %>
			
		</div>

		<br />
	</div>
</div>