<% if @contact.errors.any? %>

<ul class="alert alert-error error_form_list">
	<% @contact.errors.full_messages.each do |msg| %>
	<li>
		<%= msg %>
	</li>
	<% end %>
</ul>
<% end %>

	<%= form_for [:admin,@contact], :html =>{:class=>"form-horizontal"}  do |f| %>


	<div class="control-group">
		<%= f.label :user_id, "User",:class=>"control-label" %>
		<div class="controls">
			<%= f.select(:user_id, @users.collect {|s| [s.name, s.id]},{:prompt => 'Select a user'}) %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :status, :class=>"control-label" %>
		<div class="controls">
			<%= f.select :status, options_for_select([["Select a status",""],["Active", "ACTIVE"], ["Inactive", "INACTIVE"]]) %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :first_name, :class=>"control-label" %>
		<div class="controls">
			<%= f.text_field :first_name %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :last_name, :class=>"control-label" %>
		<div class="controls">
			<%= f.text_field :last_name %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :email, :class=>"control-label" %>
		<div class="controls">
			<%= f.text_field :email %>
		</div>
	</div>
	
	<div class="control-group">
		<%= f.label :email_confirmation, :class=>"control-label" %>
		<div class="controls">
			<%= f.text_field :email_confirmation %>
		</div>
	</div>
	

	<div class="control-group">
		<%= f.label :address, :class=>"control-label" %>
		<div class="controls">
			<%= f.text_area  :address, :class=>"adress_text_area" %>
		</div>
	</div>
	
	
	<div class="form-buttons pull-right" >
				<%= link_to("Back to List", admin_contacts_path, :class => 'btn btn-inverse') %>
				<%= f.submit :class =>"btn btn-primary" %>
	</div>
	<% end %>
	

