<div class="row">
	<div class="span6 offset3" >
		<% @page_title = "Edit Business Type: #{@business_type.sector}" -%>

<div class="well">
			<%= form_for(:business_type, :url => {:action => 'update', :id => @business_type.id}, :html =>{:class=>"form-horizontal"}) do |f| %>
			<legend>Edit Business Type</legend>
			<%= render(:partial => 'form', :locals => {:f => f} ) %>

			<div class="form-buttons pull-right" >
				<%= link_to("Back to List", {:action => 'list'}, :class => 'btn btn-inverse') %>
				<%= submit_tag 'Update Business Type', :class =>"btn btn-primary" %>
			</div>
			<br />
			<% end %>
		
		</div>
	</div>
</div>